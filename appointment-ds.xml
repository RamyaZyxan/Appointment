<?xml version="1.0" encoding="UTF-8"?>
<datasources>
	<datasource jndi-name="java:/appointmentDB" pool-name="appointment" enabled="true" jta="true" use-ccm="false">
		<connection-url>${env.DB_CONNECTION_URL:jdbc:mysql://localhost:3306/appointment?useCursorFetch=true&defaultFetchSize=100}</connection-url>
		<driver>mysql</driver>
		<pool>
			<min-pool-size>5</min-pool-size>
			<max-pool-size>10</max-pool-size>
		</pool>
		<security>
			<user-name>${env.DB_USERNAME:sa}</user-name>
			<password>${env.DB_PASSWORD:sa}</password>
		</security>
	</datasource>
</datasources>
